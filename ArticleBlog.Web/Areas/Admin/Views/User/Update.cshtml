@model UserUpdateDTO

<h4 class="fw-bold py-3 mb-4">
    <span class="text-muted fw-light">USER MANAGEMENT /</span> Edit User
</h4>

<div class="row">
    <div class="col-md-12">
        <div class="card mb-4">
            <h5 class="card-header"></h5>
            <form asp-controller="User" asp-action="Update" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" style="color:red"></div>
                <div class="card-body">
                    <input type="hidden" asp-for="Id"/>
                    <div class="form-group">
                        <label asp-for="@Model.FirstName" id="defaultFormControlInput" class="form-label">FirstName</label>
                        <input asp-for="@Model.FirstName" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Please Input Your FirstName" aria-describedby="defaultFormControlHelp">

                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.LastName" id="defaultFormControlInput" class="form-label">LastName</label>
                        <input asp-for="@Model.LastName" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Please Input Your LastName" aria-describedby="defaultFormControlHelp">

                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Email" id="defaultFormControlInput" class="form-label">Email</label>
                        <input asp-for="@Model.Email" type="email" class="form-control mb-3" id="defaultFormControlInput" placeholder="Please Input Your Email" aria-describedby="defaultFormControlHelp">

                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.PhoneNumber" id="defaultFormControlInput" class="form-label">PhoneNumber</label>
                        <input asp-for="@Model.PhoneNumber" type="tel" class="form-control mb-3" id="defaultFormControlInput" placeholder="Please Input Your PhoneNumber" aria-describedby="defaultFormControlHelp">

                    </div>
                    <div class="form-group">
                        <label asp-for="RoleId" id="defaultFormControlInput" class="form-label">Kullanıcının Rolü</label>
                        <select asp-for="RoleId" class="form-control mb-3" asp-items="@(new SelectList(Model.Roles,"Id","Name"))"></select>
                    </div>


                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block bg-success">Save</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

