@model List<ArticleDTO>
<div class="container-xxl flex-grow-1 container-p-y">


    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">RECYCLE BIN/</span> Articles
    </h4>


    <div class="card">
        <div class="table-responsive text-nowrap m-3">

          

            <table class="table table-bordered" id="articlesTable" width="100%" cellspacing="0">
               
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Category</th>
                        <th>Created Date</th>
                        <th>Created By</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Title</th>
                        <th>Category</th>
                        <th>Created Date</th>
                        <th>Created By</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </tfoot>
                <tbody class="table-border-bottom-0">

                    @foreach (var article in Model)
                    {
                        <tr name="@article.ID">
                            <td>@article.Title</td>
                            <td>@article.Category.CategoryName</td>
                            <td>@article.CreatedDate.ToShortDateString()</td>
                            <td>@article.CreatedBy</td>
                            <td>@(article.IsDeleted ? "None Active" : "Active")</td> 
                            <td>
                                <a class="btn btn-warning btn-sm" data-id="@article.ID" asp-area="Admin" asp-controller="Article" asp-action="UndoDelete" asp-route-Id="@article.ID"><i class='bx bx-undo'></i></a>
                              
                            </td>
                        </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
   

</div>
@section Scripts{
    <script src="~/js/articleIndex.js" type="application/ecmascript"></script>
} 