@model List<CategoryDTO>
<div class="container-xxl flex-grow-1 container-p-y">


    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">CATEGORY MANAGEMENT/</span> Categories
    </h4>


    <div class="card">
        <div class="table-responsive text-nowrap m-3">

            <a a class="btn btn-success mb-3" asp-area="Admin" asp-controller="Category" asp-action="Add">Add New Category<i class="bx bx-plus"></i></a> @* Sayfaya GET işlemi yapacaktır *@

            <table class="table table-bordered" id="categoryTable" width="100%" cellspacing="0">
                @*  id="articleTables" wwwroot içindeki articleIndex dosyasındaki id ile aynı olmalıdır. JS dosyası ile tablonun içini doldurduk. *@
                <thead>
                    <tr>
                        <th>Category Name</th>
                        <th>Created Date</th>
                        <th>Created By</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Category Name</th>
                        <th>Created Date</th>
                        <th>Created By</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </tfoot>
                <tbody class="table-border-bottom-0">

                    @foreach (var category in Model)
                    {
                        <tr name="@category.ID">
                            <td>@category.CategoryName</td> @* kategorinin sadece adı lazım olduğu için ArticleDTO da açtığımız CategoryDTO probundan CategoryDTO daki Name probuna gideriz. *@
                            <td>@category.CreatedDate.ToShortDateString()</td>
                            <td>@category.CreatedBy</td>
                            <td>@(category.IsDeleted ? "None Active" : "Active")</td> @* true ise silinmiş false ise aktif demektir. *@
                            <td>
                                <a class="btn btn-primary btn-sm" data-id="@category.ID" asp-area="Admin" asp-controller="Category" asp-action="Update" asp-route-Id="@category.ID">@* buradaki yönlendirme ye(asp-route-Id) update controllerdaki parametre adını yazmak gerekir. *@ <i class="bx bxs-edit"></i></a> @* Burası biz güncelleme butonuna basınca Article Controllerdaki Update actionresult ının cshtml (view) sayfasına atması gerekirki orada düzenleme yapalım *@
                                <a class="btn btn-danger btn-sm" data-id="@category.ID" asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-Id="@category.ID">@* buradaki yönlendirme ye(asp-route-Id) Delete controllerdaki parametre adını yazmak gerekir. *@ <i class="bx bx-minus-circle"></i></a> @* Burası biz sil butonuna basınca Article Controllerdaki Delete actionresult ının cshtml (view) sayfasına atması gerekirki orada silme yapalım *@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!--/ Basic Bootstrap Table -->


</div>
@section Scripts{
    <script src="~/js/categoryIndex.js" type="application/ecmascript"></script>
}  @* ***Bu ifade wwwroot içindeki JS de eklenilen articleIndex dosyasının görmesini sağlar.  *@