@model ArticleListDTO
<section class="blog-posts">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="all-blog-posts">
                    <div class="row">

                        <!--MAKALELER KISMI-->


                        <div class="col-lg-12">
                            @foreach (var item in Model.Articles)       //burada tüm makaleleri dönmesi için bu yapıyı kurduk
                            {
                                <input type="hidden" id="keyword" value="@Model.CurrentPage" />
                                <div class="blog-post">
                                    <div class="blog-thumb">
                                        <img src="~/stand-blog/assets/images/blog-post-01.jpg" alt=""> @* assets den çnce wwwroot daki dosya yolunu referans veririz. ~/stand-blog/  *@

                                    </div>
                                    <div class="down-content">
                                        <a asp-controller="Home" asp-action="Detail" asp-route-id="@item.ID"><h4>@item.Title</h4></a> @* Başlığa basınca makale detayına yönlendiriyor *@
                                        <ul class="post-info">
                                            <li><a asp-controller="Home" asp-action="AuthorDetails" asp-route-id="@item.UserId"> <i class='bx bxs-user-circle'></i> @item.CreatedBy </a></li>
                                            <li>@item.CreatedDate.ToString("dd/MM/yyyy")</li>
                                            <li><i class="fa-solid fa-eye"></i> @item.ViewCount</li>
                                        </ul>
                                        <p>
                                            @(item.Content.Length > 300 ? item.Content.Substring(0, 300) : item.Content)    @* burada ana sayfadaki makalemin belli kısmını 300 karakterlik kısmını ekrana veriyorum. diyorum ki Content.Length 300 den büyükse 300 e kadar olan kısmını gizleyerek göster, değilse contenti göster diyoruz. *@
                                        </p>
                                        <div class="post-options">
                                            <div class="row">
                                                <div class="col-6">
                                                    <ul class="post-tags">
                                                        <li><i class="fa fa-tags"></i></li>
                                                        <li><a href="#">@item.Category.CategoryName</a></li>
                                                    </ul>
                                                </div>
                                                <div class="col-6">
                                                    <ul class="post-share">
                                                        <li><i class="fa fa-link"></i></li>
                                                        <li><a asp-controller="Home" asp-action="Detail" asp-route-id="@item.ID">[Read More]</a></li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                        <!--MAKALELER KISMI-->




                        <!--ALTTAKİ SAYFA SAYILARI KISMI-->


                        <div class="col-lg-12">
                          @*   <div class="main-button">
                                <a href="blog.html">View All Posts</a>
                            </div> *@

                        <ul class="pagination justify-content-center mb-4 mt-4 btn-block">

                            @if (Model.ShowPrevious)    @* Geri sayfaya gitme kısmı için yapıldı *@
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-route-currentPage="@(Model.CurrentPage - 1)" asp-route-pageSize="@Model.PageSize"> Önceki </a>
                                </li>
                            }
                            @for (int i = 1; i < Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">  @* i değeri currentPage ye eşitse bu sayfayı aktiftir deriz. *@

                                    <a class="page-link" asp-route-currentPage="@i" asp-route-pageSize="@Model.PageSize"> @i </a>  @* GetAllByPagingAsync() metodundaki parametredeki isimlerle isimlendirmeliyiz   currentPage pageSize gibi çünkü referanslarda sıkıntı çıkar yönlendirirken Buradaki i neyse currentPage odur.*@
                                </li>
                            }
                            @if (Model.ShowNext)         @* İleri sayfaya gitme kısmı için yapıldı *@
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-route-currentPage="@(Model.CurrentPage + 1)" asp-route-pageSize="@Model.PageSize"> Sonraki </a>
                                </li>
                            }

                        </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="sidebar">
                    <div class="row">

                        <!--ALTTAKİ SAYFA SAYILARI KISMI-->


                        <!--SEARCH KISMI-->

                        <div class="col-lg-12">
                            <div class="sidebar-item search">
                                <form id="search_form" asp-controller="Home" asp-action="Search" method="GET">
                                    <input type="text" name="keyword" class="searchText" placeholder="Search..." autocomplete="on">
                                </form>
                            </div>
                        </div>                   
                      

                        <!--SEARCH KISMI-->


                        <!--CATEGORIES KISMI-->


                        <div class="col-lg-12">
                            <div class="sidebar-item categories">
                                <div class="sidebar-heading">
                                    <h2>Categories</h2>
                                </div>
                               @await Component.InvokeAsync("HomeCategories")    
                              @*  bu dosyanın ViewComponen klasöründe yer alan HomeCategoriesViewComponentle aynı olması gereklidir. (Aynı olacak kısım ViewComponent kısmından önce HomeCategories dir.) *@
                            </div>
                        </div>
                        <!--CATEGORIES KISMI-->
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

