@model UserUpdateDTO

<div style="height:100px;">
    <center>
        <h5 class="fw-bold py-3 mb-4"> Edit Profile</h5>
    </center>

</div>

<div class="row">
    <div class="col-md-12">
        <div class="card mb-4">
            <h5 class="card-header"></h5>
            <form asp-controller="User" asp-action="Update" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" style="color:red"></div>
                <div class="card-body">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="@Model.FirstName" id="defaultFormControlInput" class="form-label">FirstName</label>
                        <input asp-for="@Model.FirstName" type="text" class="form-control mb-3" id="defaultFormControlInput" aria-describedby="defaultFormControlHelp">

                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.LastName" id="defaultFormControlInput" class="form-label">LastName</label>
                        <input asp-for="@Model.LastName" type="text" class="form-control mb-3" id="defaultFormControlInput" aria-describedby="defaultFormControlHelp">

                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Email" id="defaultFormControlInput" class="form-label">Email</label>
                        <input disabled asp-for="@Model.Email" type="email" class="form-control mb-3" id="defaultFormControlInput" aria-describedby="defaultFormControlHelp">

                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.PhoneNumber" id="defaultFormControlInput" class="form-label">PhoneNumber</label>
                        <input asp-for="@Model.PhoneNumber" type="tel" class="form-control mb-3" id="defaultFormControlInput" aria-describedby="defaultFormControlHelp">

                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block bg-success">Save</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

